<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox
   xmlns="http://javafx.com/javafx/8.0.171"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.github.belivipro9x99.studentsmanager.Controllers.MainController"
>
   <children>
      <HBox styleClass="header">
         <VBox HBox.hgrow="ALWAYS">
            <Label fx:id="mainTitle" text="Tên Khoa" />
            <Label fx:id="subTitle" text="Địa Chỉ" />
         </VBox>
         <VBox>
            <Button text="Chỉnh Sửa Thông Tin">
               <graphic>
                  <ImageView fitHeight="13" fitWidth="13" pickOnBounds="true" preserveRatio="true">
                    <image>
                      <Image url="@img/pencil-alt-solid.png" />
                    </image>
                  </ImageView>
                </graphic>
            </Button>
         </VBox>
      </HBox>

      <TabPane VBox.vgrow="ALWAYS">
         <tabs>
            <Tab text="Sinh Viên" closable="false">
               <content>
                  <TableView fx:id="studentsTable">
                  </TableView>
               </content>
            </Tab>
            <Tab text="Giảng Viên" closable="false">
               <content>
                  <TableView fx:id="teachersTable">
                  </TableView>
               </content>
            </Tab>
         </tabs>
      </TabPane>

      <HBox>
         <Button HBox.hgrow="ALWAYS" maxWidth="999999999" styleClass="green, rect" text="Thêm Sinh Viên">
            <graphic>
               <ImageView fitHeight="13" fitWidth="13" pickOnBounds="true" preserveRatio="true">
                 <image>
                   <Image url="@img/plus-solid.png" />
                 </image>
               </ImageView>
             </graphic>
         </Button>
      </HBox>
   </children>

   <stylesheets>
      <URL value="@css/default.css"></URL>
      <URL value="@css/button.css"></URL>
      <URL value="@css/main.css"></URL>
   </stylesheets>
</VBox>
